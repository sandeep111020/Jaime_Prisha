<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="30dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shaowlayout"

        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/specimage"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="35dp"
                android:layout_height="45dp"
                android:id="@+id/itemdelete"
                android:layout_marginRight="25dp"
                android:background="@drawable/ic_baseline_delete_sweep_24"
                android:layout_gravity="right"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="24dp"
                android:textStyle="bold"
                android:id="@+id/Specname"/>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal">
                 <TextView
                     android:layout_width="30dp"
                     android:layout_height="wrap_content"
                     android:id="@+id/minus"
                     android:backgroundTint="#000000"
                     android:background="@drawable/ic_baseline_indeterminate_check_box_24"
                     android:layout_marginLeft="40dp"
                     />
                 <TextView
                     android:layout_width="30dp"
                     android:layout_marginLeft="5dp"
                     android:id="@+id/count"
                     android:textStyle="bold"
                     android:textSize="24dp"
                     android:layout_height="wrap_content"
                     />
                 <TextView
                     android:layout_width="30dp"
                     android:layout_height="wrap_content"
                     android:id="@+id/plus"
                     android:backgroundTint="#000000"
                     android:background="@drawable/ic_baseline_add_box_24"
                     android:layout_marginLeft="5dp"

                     />

             </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Specdesc"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="28dp"
                android:textColor="#EF3434"
                android:textStyle="bold"
                android:id="@+id/Specprice"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>